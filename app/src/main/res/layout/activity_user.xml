<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <TextView
        android:id="@+id/textHeaderNama"
        android:elevation="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Nama Pengguna"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDetailFoto"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textHeaderNama"
        app:srcCompat="@drawable/male" />

    <TextView
        android:id="@+id/textDetailNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pengguna"
        android:lineHeight="24dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageDetailFoto" />

    <TextView
        android:id="@+id/textDetailEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Pengguna"
        android:lineHeight="24dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textDetailNama" />

    <TextView
        android:id="@+id/textDetailJurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jurusan Pengguna"
        android:lineHeight="24dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textDetailEmail" />

    <TextView
        android:id="@+id/textDetailSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semester Pengguna"
        android:lineHeight="24dp"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingHorizontal="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/textDetailJurusan" />

</androidx.constraintlayout.widget.ConstraintLayout>